  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set admin_token from Login response",
          "if (pm.response.code === 200 && pm.request.url.path.includes('auth/login')) {",
          "    const response = pm.response.json();",
          "    if (response.success && response.session_token) {",
          "        pm.collectionVariables.set('admin_token', response.session_token);",
          "        console.log('Admin token set:', response.session_token);",
          "    }",
          "}",
          "",
          "// Set session_id from Step 1 response",
          "if (pm.response.code === 200 && pm.request.url.path.includes('step-1')) {",
          "    const response = pm.response.json();",
          "    if (response.success && response.sessionId) {",
          "        pm.collectionVariables.set('session_id', response.sessionId);",
          "        console.log('Session ID set:', response.sessionId);",
          "    }",
          "}",
          "",
          "// Set share_token from Share Form response",
          "if (pm.response.code === 200 && pm.request.url.path.includes('share') && !pm.request.url.path.includes('shared-form')) {",
          "    const response = pm.response.json();",
          "    if (response.success && response.shareToken) {",
          "        pm.collectionVariables.set('share_token', response.shareToken);",
          "        console.log('Share token set:', response.shareToken);",
          "    }",
          "}"
        ]
      }
    }
  ]
